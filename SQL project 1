create table friends(
  id integer,
  name text,
  birthday date
);

insert into friends
values (1, 'Ororo Munroe', '05/30/1940');

insert into friends
values (2, 'Chris Reddekopp', "08/06/1976");

insert into friends
values (3, 'Justin Redddekopp', '06/25/1997');

update friends
set name = 'Storm'
where id = 1;

alter table friends
add email text;

update friends
set email = 'storm@codecademy.com'
where id = 1;

delete from friends
where id = 1;

select * from friends;
